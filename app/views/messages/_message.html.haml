
.main-box{data: {message: {id: message.id}}}
  .main-box-data
    .main-box-data__user-name
      = message.user.name
    .main-box-data__user-data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__user-message
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'main__user-name' if  message.image.present?
