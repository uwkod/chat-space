
.side-bar
  .side-bar__header
    .side-bar__header__box
      = current_user.name
      %p.side-bar__header__box__name
        
      %ul.side-bar__header__box__icon
        %li.side-bar__header__box__edit-user
          = link_to new_group_path do
            = icon('fas','edit')
        %li.side-bar__header__box__new-group 
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message
    
        
  


 




